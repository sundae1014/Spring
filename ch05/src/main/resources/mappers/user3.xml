<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch05.mapper.User3Mapper">
    <insert id="insertUser3">
        INSERT INTO USER3 VALUES (#{user_id},#{name},#{birth},#{age})
    </insert>
    <select id="selectAllUser3" resultType="kr.co.ch05.dto.User3DTO">
        SELECT * FROM USER3
    </select>
    <select id="selectUser3" resultType="kr.co.ch05.dto.User3DTO">
        SELECT * FROM USER3 WHERE user_id=#{user_id}
    </select>
    <update id="updateUser3">
        UPDATE USER3 SET
            name=#{name},
            birth=#{birth},
            age=#{age}
        WHERE
            user_id=#{user_id}
    </update>
    <delete id="deleteUser3">
        DELETE FROM USER3 WHERE user_id=#{user_id}
    </delete>
</mapper>