<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch05.mapper.User7Mapper">
    <insert id="insertUser7">
        INSERT INTO USER7 VALUES (#{user_id},#{name},#{birth},#{age})
    </insert>
    <select id="selectAllUser7" resultType="kr.co.ch05.dto.User7DTO">
        SELECT * FROM USER7
    </select>
    <select id="selectUser7" resultType="kr.co.ch05.dto.User7DTO">
        SELECT * FROM USER7 WHERE user_id=#{user_id}
    </select>
    <update id="updateUser7">
        UPDATE USER7 SET
            name=#{name},
            birth=#{birth},
            age=#{age}
        WHERE
            user_id=#{user_id}
    </update>
    <delete id="deleteUser7">
        DELETE FROM USER7 WHERE user_id=#{user_id}
    </delete>
</mapper>